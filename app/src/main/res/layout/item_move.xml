<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_move"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cl_move"
            >

            <ImageView
                android:id="@+id/iv_picture_user_transfer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/user_picture"
                app:layout_constraintBottom_toBottomOf="@id/tv_state_order"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_name_user"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_user"
                android:text="Stori bank"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toRightOf="@id/iv_picture_user_transfer"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_state_order"
                android:text="Enviado"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:textStyle="italic"
                android:textColor="@color/black"
                app:layout_constraintLeft_toRightOf="@id/iv_picture_user_transfer"
                app:layout_constraintTop_toBottomOf="@id/tv_name_user"
                app:layout_constraintBottom_toBottomOf="@id/iv_picture_user_transfer"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_amount_move"
                android:text="$ 150.000"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_picture_user_transfer"
                app:layout_constraintBottom_toBottomOf="@id/iv_picture_user_transfer"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>